@model JobCreateEditViewModel
<h3>Create Job</h3>
<form method="post">@Html.AntiForgeryToken()
    <div class="mb-2"><label asp-for="Title"></label><input asp-for="Title" class="form-control"/></div>
    <div class="mb-2"><label asp-for="Description"></label><textarea asp-for="Description" class="form-control"></textarea></div>
    <div class="mb-2"><label asp-for="Salary"></label><input asp-for="Salary" class="form-control"/></div>
    <div class="mb-2"><label asp-for="Location"></label><input asp-for="Location" class="form-control"/></div>
    <div class="mb-2"><label asp-for="CategoryId"></label><select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"></select></div>
    <button class="btn btn-primary">Save Job</button>
</form>
