@model LoginViewModel
<h2>Login</h2>
<form method="post" class="card p-4 shadow-sm">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-2"><label asp-for="Email"></label><input asp-for="Email" class="form-control" /></div>
    <div class="mb-2"><label asp-for="Password"></label><input asp-for="Password" class="form-control" /></div>
    <div class="form-check mb-2"><input asp-for="RememberMe" class="form-check-input" /><label asp-for="RememberMe" class="form-check-label"></label></div>
    <button class="btn btn-primary">Login</button>
</form>
